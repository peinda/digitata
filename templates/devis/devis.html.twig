{% extends 'layeout.html.twig' %}
{% block title %} Demande de devis{% endblock %}

{% block main %}
    <div class="my-5">
        <a class="navbar-brand"
           href="#projects"><img class="d-block w-100"  src="{{ asset('img/picture1.jpg') }}"  alt="Second slide"></a>
    </div>
    <div class="jumbotron">
        <div class="container">

            {# {% for label, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-dismissible{{ label }}">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong class="alert-success">{{ message }}</strong>
    </div>
    {% endfor %}
    {% endfor %} #}
            {% if not contactForm.vars.valid %}
                <div class="alert alert-danger">
                    Le formulaire n'est pas rempli correctement
                </div>
            {% endif %}

            <div class="row " style="font-weight: bold">

                <!---->
                <h4 class="text-center">Demande de Devis</h4>
                <div class="col-md-6 text-center text-lg-start"  id="contactForm">

                    {{ form_start(contactForm) }}

                    <div class="col">{{ form_row(contactForm.firstname) }}</div>
                    <div class="col">{{ form_row(contactForm.lastname) }}</div>
                    <div class="col">{{ form_row(contactForm.objet) }}</div>
                    <div class="col">{{ form_row(contactForm.societe) }}</div>
                    <div class="col">{{ form_row(contactForm.budget) }}</div>

                </div>
                <!---->
                <div class="col-md-6 text-center text-lg-start">
                    <div class="col">{{ form_row(contactForm.phone) }}</div>
                    <div class="col">{{ form_row(contactForm.email) }}</div>

                    {{ form_rest(contactForm) }}

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">

                        <button class=" btn btn-lg btn-primary"  type="submit">Envoyer</button>
                    </div>
                    {{ form_end(contactForm) }}
                </div>

            </div>

        </div>

    </div>

{% endblock %}
