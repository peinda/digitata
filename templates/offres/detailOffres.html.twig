{% extends 'layeout.html.twig' %}

{% block main %}
    <div class="container-fluid" style="height:100px;"></div>
    <div  class="bg-image"
          style=" background-image: url('https://i.ibb.co/s3JLWFc/sanstitre.png') ">
        <div class="container-fluid  lead col-xl-12 px-4 py-5" >
            <h2 class=" text-center text-black" >{{ offre.posteRecherche }}</h2>
            <section >

                <div class="row  g-5 py-3">
                    <aside class="feature col-md-4" >
                        <div class="col-lg-12">
                            <h4 class="  text-center text-white" style="  background-color: #211de7 ; border: thick double  white;">Pourquoi nous rejoindre?</h4>
                            <p class="  text-white" style="text-align: justify; background-color: #211de7; border: thick double  white;">Entreprise de Service Numérique (ESN) spécialisée dans l'automatisation
                                robotisée des processus métiers de nos clients</p>
                        </div>
                        <div class="col-lg-12">
                            <h4 class=" text-center text-white" style="  background-color: #211de7;border: thick double  white;">Nos valeurs et principes</h4>

                            <div class=" text-center text-white" style="  background-color: #211de7;border: thick double  white;">
                                <p class="lead ">DIGITATA-IT a pour objet le conseil, la création (conception et réalisation) et
                                    la maintenance d’applications informatiques relatives à l’automatisation des processus métiers
                                    et du développement web. L'ensemble de nos missions consiste à vous faire profiter de l’automatisation
                                    des processus métiers pour optimiser votre performance et par la même occasion votre business.</p>
                            </div>

                        </div>
                    </aside>
                    <article class="feature col-md-8">
                        <div class="container py-2" id="featured-3">

                            <div >
                                    <div>
                                        <div class="row justify-content-around">
                                            <div class="col-6">
                                                <div class=" text-center text-white" style="  background-color: #211de7 ;border: thick double  white;">
                                                    <p ><b>Exp souhaitée</b>: <em>{{ offre.skills }}</em></p>
                                                    <p><b>Poste recherché</b>: <em>{{ offre.posteRecherche }}</em></p>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class=" text-center text-white" style="  background-color: #211de7 ;border: thick double  white;">
                                                    <p><b>Adresse</b>: <em>{{ offre.adresse }}</em></p>
                                                    <p><b>Contrat</b>: <em>{{ offre.contratType }}</em></p>
                                                    <p><b>Debut</b>: <em>{{ offre.begginingAT |date("Y-m-d")  }}</em></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class=" text-center text-white" style="  background-color: #211de7 ;border: thick double  white;">
                                            <p><b>Description de l'offre</b>: <em class="text-lg-start">{{ offre.description }}</em></p>
                                        </div>
                                            <div class="container-fluid" style="height:100px;"></div>
                                        <div class="col text-center" >
                                            <a href="{{ path('postuler', {'id': offre.id})}}" style="  background-color: #211de7 ; color: white;border: thick double  white;">
                                                Postuler ici
                                            </a>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </article>

                </div>
            </section>
        </div>
    </div>
{% endblock %}